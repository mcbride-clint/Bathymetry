<Window x:Class="Bathymetry.Ui.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Bathymetry.Ui"
		mc:Ignorable="d"
		Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button x:Name="StartStopButton" Click="StartStopButton_Click">Start / Stop</Button>
            <Button x:Name="Open3dButton" Click="Open3dButton_Click">Show 3D View</Button>
            <TextBlock x:Name="OutputStream" ></TextBlock>
        </DockPanel>
    </Grid>
</Window>
